<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Professor to Subject</title>
</head>
<body>

    <form action="/addprof_to_subject" method="POST">
        <label for="subject_id">Select Subject:</label>
        <select name="subject_id" id="subject_id">
            <% if (subjects) { %>
                <% subjects.forEach(subject_id => { %>
                    <option value="<%= subject_id %>"><%= subject_id %></option>
                <% }); %>
            <% } %>
        </select> <br><br>

        <label for="teacher_id">Teacher number: </label>
        <input type="text" id="teacher_id" name="teacher_id" required><br><br>

        <label for="teacher_name">Teacher Name: </label>
        <input type="text" id="teacher_name" name="teacher_name" required><br><br>
        

        <button type="submit">Submit</button>
    </form>
    
</body>
</html>