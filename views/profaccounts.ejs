<!DOCTYPE html>
<html>
<head>
    <title>Teacher Table</title>
</head>
<body>
    <h1>Teacher Table</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Teacher ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% teachers.forEach(function(teacher) { %>
                <tr>
                    <td><%= teacher.id %></td>
                    <td><%= teacher.teacher_id %></td>
                    <td><%= teacher.first_name %></td>
                    <td><%= teacher.last_name %></td>
                    <td><%= teacher.username %></td>
                    <td><%= teacher.password %></td>
                    <td>
                        <a href="/profaccounts/view/<%= teacher.id %>">View</a>
                        <a href="/profaccounts/edit/<%= teacher.id %>">Edit</a>
                        <form method="POST" action="/profaccounts/delete/<%= teacher.id %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
